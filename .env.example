# Google OAuth (from Google Cloud Console)
VITE_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Microsoft OAuth (from Microsoft Entra / Azure AD)
VITE_MICROSOFT_CLIENT_ID=your-client-id

# Default location for weather (if geolocation unavailable)
VITE_DEFAULT_LATITUDE=51.5074
VITE_DEFAULT_LONGITUDE=-0.1278

# Display settings
VITE_SCREEN_CYCLE_INTERVAL=30000
VITE_DATA_REFRESH_INTERVAL=300000

# Alpha Vantage API Key (optional, for stock prices)
# Get free key at: https://www.alphavantage.co/support/#api-key
VITE_ALPHA_VANTAGE_API_KEY=

# Supabase (for cross-device sync)
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
